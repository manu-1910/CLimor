<?xml version="1.0" encoding="utf-8"?>

<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="10000"
        motion:motionInterpolator="easeOut">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:targetId="@id/ivPodcastBackground"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.00"
                motion:framePosition="1"
                motion:motionTarget="@id/shadowTop" />
            <KeyAttribute
                android:alpha="0.00"
                motion:framePosition="100"
                motion:motionTarget="@id/shadowTop" />
            <KeyAttribute
                android:alpha="0.00"
                motion:framePosition="1"
                motion:motionTarget="@id/shadowBottom" />
            <KeyAttribute
                android:alpha="0.00"
                motion:framePosition="100"
                motion:motionTarget="@id/shadowBottom" />

            <KeyAttribute
                android:alpha="0.00"
                motion:framePosition="0"
                motion:motionTarget="@id/includeMiniPlayer" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="50"
                motion:motionTarget="@id/includeMiniPlayer" />
            <KeyAttribute
                android:alpha="0.1"
                motion:framePosition="75"
                motion:motionTarget="@id/includeMiniPlayer" />

            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="10"
                motion:motionTarget="@id/svPodcastInfo" />
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="40"
                motion:motionTarget="@id/svPodcastInfo" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@id/svPodcastInfo" />

            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/ivPodcastBackground" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivPodcastBackground" />


            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/lpiPodcastProgress" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/lpiPodcastProgress" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/tvRecastPlayCurrentPosition" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/tvRecastPlayCurrentPosition" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/tvRecastPlayMaxPosition" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/tvRecastPlayMaxPosition" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/btnPodcastPlayPrevious" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/btnPodcastPlayPrevious" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/btnPodcastRewindBack" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/btnPodcastRewindBack" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/btnPodcastPlayExtended" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/btnPodcastPlayExtended" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/btnPodcastRewindForward" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/btnPodcastRewindForward" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/btnPodcastPlayNext" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/btnPodcastPlayNext" />

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@id/start">
        <Constraint android:id="@+id/ivPodcastBackground" />

        <Constraint
            android:id="@+id/flMotionTarget"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@id/end">

        <Constraint
            android:id="@+id/ivPodcastBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/shadowBottom"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <Constraint
            android:id="@+id/shadowTop"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Constraint
            android:id="@+id/svPodcastInfo"
            android:layout_width="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/flMotionTarget"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>