<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="1.5dp" android:color="@color/brandSecondary100" />
                    <gradient android:angle="270" android:centerColor="@color/brandPrimary500" android:endColor="@color/brandPrimary500" android:startColor="@color/brandPrimary500" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>

            <item>
                <inset
                    android:drawable="@drawable/ic_check"/>
            </item>
        </layer-list>
    </item>

</selector>