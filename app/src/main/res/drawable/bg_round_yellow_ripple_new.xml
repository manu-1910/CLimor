<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/orange200">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#F9BB4B" />
            <corners android:radius="@dimen/cornerRadiusNormal" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:endColor="#F9BB4B"
                    android:startColor="#F9BB4B"
                    android:type="linear" />
            <corners android:radius="@dimen/cornerRadiusNormal" />
        </shape>
    </item>
</ripple>