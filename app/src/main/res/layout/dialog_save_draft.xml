<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/header_close"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginAlmostLarge"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_cancel_draft" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/marginAlmostLarge"
        android:layout_marginEnd="@dimen/marginAlmostLarge"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/marginMediumSmall"
        android:text="@string/cancel_draft"
        android:includeFontPadding="false"
        android:textColor="@color/textPrimary"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/marginAlmostLarge"
        android:layout_marginTop="@dimen/marginVerySmall"
        android:layout_marginEnd="@dimen/marginMedium"
        android:fontFamily="@font/roboto"
        android:text="@string/what_you_wish_to_do_cast"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/textSizeTiny" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginTwenty"
        android:layout_marginTop="@dimen/margin38"
        android:layout_marginEnd="@dimen/marginTwenty"
        android:layout_marginBottom="@dimen/marginAlmostLarge"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <Button
            android:id="@+id/noButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize14"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@color/textPrimary"
            android:text="@string/alert_cancel_record_do_not_save" />


        <Button
            android:id="@+id/saveButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_yellow_ripple_new"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/textSize14"
            android:textAllCaps="false"
            android:textColor="@color/textPrimary"
            android:layout_weight="1"
            android:text="@string/save_as_draft" />


    </LinearLayout>


</LinearLayout>