<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/brandSecondary400">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_margin="@dimen/marginMedium"
        android:background="@android:color/transparent"
        android:hint="@string/hint_report_user"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColorHint="@color/brandSecondary100" />

    <include
        android:id="@+id/rl_mini_player_view"
        layout="@layout/mini_player_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/miniPlayerHeight"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>