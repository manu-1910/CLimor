<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/llTopDialogForm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/llCancelForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:visibility="gone"
                android:id="@+id/btnEditComment"
                style="@style/ButtonTextStyle.Icon"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:text="@string/edit_comment"
                android:textColor="@color/black"
                app:icon="@drawable/ic_edit_podcast"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#F0F3F8" />

            <Button
                android:visibility="gone"
                android:id="@+id/btnReportComment"
                style="@style/ButtonTextStyle.Icon"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:text="@string/report_comment"
                android:textColor="@color/black"
                app:icon="@drawable/ic_exclamation_triangle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#F0F3F8" />


            <Button
                android:visibility="gone"
                android:id="@+id/btnReportUser"
                style="@style/ButtonTextStyle.Icon"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:text="@string/report_user"
                android:textColor="@color/black"
                app:icon="@drawable/ic_user_exclamation"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#F0F3F8" />


            <Button
                android:visibility="gone"
                android:id="@+id/btnDeleteComment"
                style="@style/ButtonTextStyle.Icon.Red"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:text="@string/delete_comment"
                android:textColor="#FF5A4E"
                app:icon="@drawable/ic_delete_bin"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#F0F3F8" />

            <Button
                android:visibility="gone"
                android:id="@+id/btnBlockUser"
                style="@style/ButtonTextStyle.Icon.Red"
                android:layout_width="match_parent"
                android:text="@string/block_user"
                android:textColor="#FF5A4E"
                app:icon="@drawable/ic_slash"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="16dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/llCancelForm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTopDialogForm">

        <Button
            android:id="@+id/btnCancel"
            style="@style/ButtonTextStyle.Icon"
            android:layout_width="match_parent"
            android:text="@string/cancel"
            android:textColor="@color/black"
            app:icon="@drawable/ic_cancel_podcast"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="10dp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>