<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageMore"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_more_vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <ImageView
        android:id="@+id/imagePlaylist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textPlaylistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Inspirational casts for people"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/imagePlaylist"/>

    <TextView
        android:id="@+id/textPlaylistPodcastCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10 Casts"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textPlaylistTitle"
        app:layout_constraintStart_toStartOf="@id/textPlaylistTitle"
        />



</androidx.constraintlayout.widget.ConstraintLayout>