<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/trash_circle_fill" />

        <TextView
            android:id="@+id/miss_you_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will miss you."
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeVeryLarge"
            android:layout_below="@id/delete_icon"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/account_deleted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/miss_you_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/ef_grey"
            android:text="Your account has been deleted"
            android:textSize="@dimen/textSizeNormal" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>