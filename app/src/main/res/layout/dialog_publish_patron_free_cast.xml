<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_background">


    <ImageView
        android:id="@+id/btnCLose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        app:srcCompat="@drawable/ic_close_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginTop="@dimen/marginAlmostLarge"
            android:background="@drawable/bg_circle_grey"
            app:srcCompat="@drawable/ic_help_circle" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/marginAlmostLarge"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:layout_marginEnd="@dimen/marginAlmostLarge"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="@string/publish_free_cast_patron"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin24"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/textPrimary"
            android:textAlignment="gravity"
            android:textSize="@dimen/textSizeNormal" />

        <CheckBox
            android:id="@+id/checkNotShowAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginBottom="@dimen/margin24"
            android:lines="1"
            android:text="@string/donot_shoe_again"
            android:textColor="@color/textPrimary"
            android:textAlignment="gravity"
            android:textSize="@dimen/textSizeSmall" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginTwenty"
            android:layout_marginEnd="@dimen/marginTwenty"
            android:layout_marginBottom="@dimen/marginAlmostLarge"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">


            <Button
                android:id="@+id/okButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_round_yellow_ripple_new"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/publish"
                android:textAllCaps="false"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textSize14" />


            <Button
                android:id="@+id/cancelButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/btn_yes"
                android:textAllCaps="false"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textSize14"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>



</FrameLayout>