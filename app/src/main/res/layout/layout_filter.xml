<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">

    <TextView
        android:id="@+id/textNewToOld"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/newest_to_oldest"
        android:textColor="@color/toolbar_text_dark"
        android:textSize="@dimen/textSize16"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/vSeperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightBlueColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNewToOld"/>

    <TextView
        android:id="@+id/textOldToNew"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/oldest_to_newest"
        android:textSize="@dimen/textSize16"
        android:textColor="@color/toolbar_text_dark"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNewToOld"/>

</androidx.constraintlayout.widget.ConstraintLayout>