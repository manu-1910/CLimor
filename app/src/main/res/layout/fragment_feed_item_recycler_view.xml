<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brandSecondary400"
    android:orientation="vertical">


    <!-- DO NOT REMOVE: this "useless" view is necessary to keep the right top margin independently if
                        we are showing the recasted textView or not -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/tvSomeoneRecasted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/recast"
        android:drawablePadding="4dp"
        android:text="You recasted"
        android:textColor="@color/brandSecondary100"
        android:textSize="15sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/ivUserPicture"
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/user_picture"
            android:src="@drawable/like_filled" />

        <ImageView
            android:id="@+id/ivVerifiedUser"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignEnd="@id/ivUserPicture"
            android:layout_alignBottom="@id/ivUserPicture"
            android:contentDescription="@string/verified"
            android:src="@drawable/verified"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="John Doe"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvTimeAndLocation"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignStart="@+id/tvUserName"
            android:layout_alignBottom="@+id/tvUserName"
            android:layout_marginBottom="-16dp"
            android:fontFamily="@font/roboto_light"
            android:text="01/01/2020 09:00 - Dublin, Ireland"
            android:textColor="@color/brandSecondary100"
            android:textSize="11sp"
            tools:ignore="HardcodedText,SmallSp" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/more"
            android:src="@drawable/more" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="375dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivMainFeedPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/podcast_picture"
                android:scaleType="centerCrop"
                android:src="@drawable/send" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_image_podcast" />


        </FrameLayout>

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/play"
            android:scaleType="fitCenter"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/tvPodcastTime"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_light"
            android:text="5m 30s"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="18dp"
            android:layout_toStartOf="@id/tvPodcastTime"
            android:contentDescription="@string/podcast_time"
            android:src="@drawable/clock" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvPodcastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Great training session today"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvPodcastText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor."
        android:textColorLink="@color/brandPrimary500"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Listens -->
        <ImageButton
            android:id="@+id/btnListens"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/listens"
            android:scaleType="fitCenter"
            android:src="@drawable/listens" />

        <TextView
            android:id="@+id/tvListens"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="10"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />


        <!-- Comments -->
        <ImageButton
            android:id="@+id/btnComments"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/comments"
            android:scaleType="fitCenter"
            android:src="@drawable/comments" />

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="10"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />


        <!-- Likes -->
        <ImageButton
            android:id="@+id/btnLikes"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/likes"
            android:scaleType="fitCenter"
            android:src="@drawable/like_filled" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="10"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />


        <!-- Recasts -->
        <ImageButton
            android:id="@+id/btnRecasts"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/recasts"
            android:scaleType="fitCenter"
            android:src="@drawable/recast" />

        <TextView
            android:id="@+id/tvRecasts"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="10"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />


        <!-- this is just the gap between the left and right side -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- send -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/send"

            android:scaleType="fitEnd"
            android:src="@drawable/send" />
    </LinearLayout>

</LinearLayout>