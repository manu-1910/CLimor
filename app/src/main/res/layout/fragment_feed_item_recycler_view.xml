<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brandSecondary400"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/ivUserPicture"
            android:layout_alignParentStart="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/user_picture" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:lineHeight="22sp"
            android:textColor="@color/white"
            android:text="User Name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_marginStart="60dp" />

        <TextView
            android:id="@+id/tvTimeAndLocation"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textSize="11sp"
            android:lineHeight="13sp"
            android:textColor="@color/brandSecondary100"
            android:text="01/01/2020 09:00 - Dublin, Ireland"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:layout_marginStart="60dp"
            tools:ignore="SmallSp" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/more"
            android:background="@color/transparent"
            android:contentDescription="@string/more" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="375dp">
        <ImageView
            android:id="@+id/ivMainFeedPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/podcast_picture"/>

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/play"
            android:background="@color/transparent"
            android:contentDescription="@string/play" />

        <TextView
            android:id="@+id/tvPodcastTime"
            android:textColor="@color/white"
            android:text="5m 30s"
            android:textSize="13sp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/tvPodcastTime"
            android:src="@drawable/clock"
            android:layout_width="14dp"
            android:layout_height="14dp"/>
    </RelativeLayout>

</LinearLayout>