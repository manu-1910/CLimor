<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="FragmentShortItemSlider">

    <ImageView
        android:id="@+id/patronStatusIv"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:src="@drawable/ic_patron_welcome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patronStatusTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/limor_patron_request"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patronStatusIv" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:lineSpacingMultiplier="1.429"
        android:text="@string/lorem"
        android:textColor="@color/grayWave"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patronStatusTv" />


</androidx.constraintlayout.widget.ConstraintLayout>