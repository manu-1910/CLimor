<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/marginMedium"
    android:layout_marginStart="@dimen/marginMedium"
    android:layout_marginTop="@dimen/marginMedium"
    android:background="@drawable/bg_round_brand_800_ripple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTierName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginMedium"
        android:text="Limor Patron Tier 1"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginMedium"
        android:layout_marginEnd="@dimen/marginMedium"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/tier_benefits"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTierBenefits"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="@string/tier_benefits"
            android:textColor="@color/brandSecondary200" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginMedium"
        android:layout_marginEnd="@dimen/marginMedium"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/tier_price"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTierPrice"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="â‚¬5"
            android:textColor="@color/brandSecondary200"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginMedium"
        android:layout_marginEnd="@dimen/marginMedium"
        android:layout_marginBottom="@dimen/marginMedium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEditTier"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/edit_tier_btn_text"
            android:textColor="@color/brandPrimary500" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tvRemoveTier"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:textColor="@color/brandPrimary500"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>