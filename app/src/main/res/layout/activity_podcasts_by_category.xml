<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/navigation_host_fragment_podcasts_by_category"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/podcasts_by_category_nav" />


    <include
        android:id="@+id/rl_mini_player_view"
        layout="@layout/mini_player_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/miniPlayerHeight"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>