<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    tools:background="@color/brandSecondary400">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/fl_follow"
        android:layout_toEndOf="@+id/iv_user"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="5sp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="User Name" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:maxLines="1"
            android:textColor="@color/brandSecondary100"
            android:textSize="13sp"
            tools:text="Just followed you" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/bg_round_yellow_ripple"
            android:text="@string/follow"
            android:textColor="@color/black"
            android:textAllCaps="false" />


    </FrameLayout>

</RelativeLayout>