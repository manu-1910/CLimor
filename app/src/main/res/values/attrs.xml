<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="hintText" format="reference"/>
    <attr name="imageSrc" format="reference" />

    <declare-styleable name="edit_text_component_attributes">
        <attr name="hasShadow" format="boolean" />
        <attr name="isPassword" format="boolean" />
        <attr name="fontColor" format="string" />
        <attr name="topTitleLeft" format="string" />
        <attr name="topTextRight" format="string" />
        <attr name="etTextSize" format="integer" />
        <attr name="isEditable" format="boolean" />
        <attr name="lines" format="integer" />
        <attr name="hintText" />
        <attr name="inputType" format="integer" />
        <attr name="hasArrow" format="boolean" />
        <attr name="hasCheck" format="boolean" />
    </declare-styleable>

    <declare-styleable name="iiVisu">
        <attr name="loadedBarPrimeColor" format="color" />
        <attr name="backgroundBarPrimeColor" format="color" />
        <attr name="spaceBetweenBar" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="approximateBarDuration" format="integer" />
        <attr name="maxAmp" format="float" />
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="hintText" />
    </declare-styleable>

    <declare-styleable name="CircleAuthorView">
        <attr name="circleColor" format="color" />
        <attr name="imageSrc" />
    </declare-styleable>

    <declare-styleable name="CroppedCircleAuthorView">
        <attr name="imageSrc" />
        <attr name="type" format="enum">
            <enum name="BIG" value="0"/>
            <enum name="SMALL" value="1"/>
            <enum name="NO_PLUS_ICON" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ArcProgress">
        <attr name="arc_progress" format="integer"/>
        <attr name="arc_angle" format="float"/>
        <attr name="arc_stroke_width" format="dimension"/>
        <attr name="arc_max" format="integer"/>

        <attr name="arc_unfinished_color" format="color"/>
        <attr name="arc_finished_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="LikeButton">
        <attr name="liked_color" format="color"/>
        <attr name="unliked_color" format="color"/>
        <attr name="liked_res" format="reference"/>
        <attr name="unliked_res" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RecastButton">
        <attr name="recast_color" format="color"/>
        <attr name="not_recasted_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="VoicePlayerView">
        <attr name="viewBackground" format="color" />
        <attr name="playPauseBackgroundColor" format="color" />
        <attr name="shareBackgroundColor" format="color" />
        <attr name="seekBarProgressColor" format="color" />
        <attr name="seekBarThumbColor" format="color" />
        <attr name="progressTimeColor" format="color" />
        <attr name="showShareButton" format="boolean" />
        <attr name="showTiming" format="boolean" />
        <attr name="viewCornerRadius" format="float" />
        <attr name="playPauseCornerRadius" format="float" />
        <attr name="shareCornerRadius" format="float" />
        <attr name="shareText" format="string" />
        <attr name="enableVisualizer" format="boolean" />
        <attr name="timingBackgroundColor" format="color" />
        <attr name="visualizationPlayedColor" format="color" />
        <attr name="visualizationNotPlayedColor" format="color" />
        <attr name="playProgressbarColor" format="color" />

    </declare-styleable>
</resources>