<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialMainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="materialButtonStyle">@style/ButtonStyleMain</item>
        <item name="materialButtonOutlinedStyle">@style/ButtonStyleMainOutlined</item>
    </style>

    <style name="MaterialMainTheme.FullScreen">
        <item name="android:windowContentOverlay">@null</item>
        <item name="textInputStyle">@style/TextInputLayoutWithError</item>
    </style>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/MaterialMainTheme</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyleMain.Follow">
        <item name="android:textColor">@color/main_button_text_color_follow</item>
        <item name="backgroundTint">@color/main_button_background_follow</item>
    </style>

    <style name="ButtonStyleMainOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/MaterialMainTheme</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyleMainOutlined.Icon">
        <item name="iconSize">20dp</item>
        <item name="iconTint">#262735</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="TextInputLayoutWithError" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/text_edit_outline_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/stroke_error_color</item>
        <item name="errorTextColor">@color/stroke_error_color</item>
        <item name="android:textColorHint">@color/subtitle_text_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutSearchLanguage" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#0F91A2B2</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeErrorColor">@color/stroke_error_color</item>
        <item name="errorTextColor">@color/stroke_error_color</item>
        <item name="android:textColorHint">@color/subtitle_text_color</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextInputLayoutOutlineWithError" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/text_edit_outline_color</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/subtitle_text_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/stroke_error_color</item>
        <item name="errorTextColor">@color/stroke_error_color</item>
        <item name="startIconTint">@color/end_icon_tint</item>
        <item name="endIconTint">@color/end_icon_tint</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.SmallCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextInputLayoutOutlineDropdownWithError" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/text_edit_outline_color</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/subtitle_text_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/stroke_error_color</item>
        <item name="errorTextColor">@color/stroke_error_color</item>
        <item name="startIconTint">@color/end_icon_tint</item>
        <item name="endIconTint">@color/end_icon_tint</item>
    </style>

    <style name="ChipUsernameVariant" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="chipBackgroundColor">@color/sign_in_new_background</item>
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="closeIcon">@null</item>
    </style>

    <style name="ChipCategory" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent.SmallCorners</item>
        <item name="chipBackgroundColor">@color/chip_category_background</item>
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="closeIcon">@null</item>
        <item name="materialThemeOverlay">@style/MaterialMainTheme.FullScreen</item>
        <item name="android:textAppearance">@style/TextAppearance.MyChip</item>
    </style>

    <style name="TextAppearance.MyChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">0.8sp</item>
    </style>

    <style name="ButtonStyleGenderOutlined" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/gender_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/gender_button_text</item>
    </style>

</resources>