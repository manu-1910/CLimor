<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialMainTheme" parent="Theme.MaterialComponents.Light" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_navigate_before</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigate_before</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="materialButtonStyle">@style/ButtonStyleMain</item>
        <item name="materialButtonOutlinedStyle">@style/ButtonStyleMainOutlined</item>
    </style>

    <style name="MaterialMainTheme.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/MaterialMainTheme</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyleMainOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/MaterialMainTheme</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>