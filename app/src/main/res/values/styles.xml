<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ns1="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_navigate_before</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigate_before</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- ProgressBar theme. -->
    <style name="ProgressBarTheme" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/progress_bar_color</item>
    </style>

    <!-- ProgressBar theme. -->
    <style name="ProgressBarInButtonTheme" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/brandSecondary500</item>
    </style>

    <!-- Bottom Navigation Theme -->
    <style name="BottomNavigationTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/brandPrimary500</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
        <item name="android:colorControlHighlight">@color/brandPrimary500</item>
    </style>

    <!-- ImagePicker Theme -->
    <style name="ef_BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SearchViewToolbar theme. -->
    <style name="SearchViewToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/brandSecondary100</item>
    </style>

    <!-- Chipview style-->
    <style name="ChipStyle" parent="TextAppearance.AppCompat.Button">
        <!-- Fake Roboto Medium. -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0892857143</item>
    </style>

    <!-- Chipview style-->
    <style name="OutlinedButton" parent="TextAppearance.AppCompat.Button">
        <!-- Fake Roboto Medium. -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0892857143</item>
        <item name="android:background">@drawable/bg_round_brand_500_ripple</item>
    </style>


    <!-- TextInputLayout Style -->
    <style name="CustomEditText">
        <item name="colorOnSurface">@color/green500</item>
        <item name="colorPrimary">@color/brandPrimary500</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="colorControlNormal">@color/brandSecondary300</item>

        //added attributes
        <item name="colorControlActivated">@color/brandPrimary500</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <style name="CustomOptionMenuStyle" parent="android:Widget.Material.TextView" ns1:ignore="ResourceName">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@drawable/bg_popup_menu</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="TextHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textAccent</item>
    </style>
</resources>
